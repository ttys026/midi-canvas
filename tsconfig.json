{
  "compilerOptions": {
    "target": "ESNext",
    "baseUrl": ".",
    "jsx": "react",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "isolatedModules": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noEmit": false,
    "outDir": "./dist",
    "declaration": true
  },
  "include": ["src"]
}
